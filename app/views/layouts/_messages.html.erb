<div class="alert-container">
  <% flash.each do |name, msg| %>
    <% if name == "alert" %>
    <div id="alert-box" class="bg-red-100 border border-red-400 text-red-700 m-5 px-4 py-3 rounded relative" role="alert">
      <%= msg %>
      <%# <button type="button" class="absolute top-0 right-0 mt-2 mr-2" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button> %>
    </div>
    <% end %>
    <% if name == "notice" %>
    <div id="alert-box" class="bg-green-100 border border-green-400 text-green-700 m-5 px-4 py-3 rounded relative" role="alert">
      <%= msg %>
      <%# <button type="button" class="absolute top-0 right-0 mt-2 mr-2" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button> %>
    </div>
    <% end %>
  <% end %>
</div>
